<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ API Test }}</title>
  <script defer src="https://cdn.jsdelivr.net/gh/hankhank10/alpine-fetch@main/alpine-fetch.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/screen.css">
  <script src="/data.js"></script>
</head>

<body class="bg-black">
  <h1 class="text-white flex justify-center font-bold text-5xl mt-4">Products</h1>

  <div 
  x-data="data()" 
  class="mx-auto px-15 py-15 w-full max-w-15x15 grid grid-cols-3 gap-5 center">

    <template x-for="Best2K in data.2k">

      <div class="p-1 rounded-15x15 bg-white flex gap-7.5 items-center  justify-center">
        <div class="relative flex justify-center">
          <div class="h-300 w-300 overflow-hidden rounded-full bg-white flex items-center justify-center">
            <img src="https://cdn.dummyjson.com/product-images/1/1.jpg" alt="iphone9">
          </div>
          <div class="flex gap-0.5 py-1 px-1.5 text-xs leading-4 absolute bottom-0 -mb-3 bg-black rounded-full shadow-sm">
          <span x-text="products.title"></span>
          </div>
        </div>
        <div class="flex flex-col gap-2 items-start">
          <div class="text-3x2 leading-none rounded-full px-5 pb-2 pt-0.5 bg-white-">
            <span x-text="products.description"></span>
          </div>
          <div class="text-base leading-6 font-medium flex gap-2">
            <span x-text="products.price"></span>
            <span>/</span>
            <span x-text="products.rating"></span>
          </div>
          <div class="text-s leading-4 font-normal flex gap-0.5">
            <span x-text="products.stock"></span>
          </div>
        </div>
      </div>
    </template>

    <div class="p-1 rounded-6x6  bg-white-500 flex gap-5 items-center shadow-xl hover:shadow-2xl cursor-pointer transition-shadow duration-200 ease-out justify-center">

        <div class="relative flex flex-col justifly-center items-center">
          <div x-data="{image: $fetchjson('https://dummyjson.com/products/1', jsonItem='image')}"class="h-22 w-22 overflow-hidden rounded-full bg-white flex items-center justify-center">
            <img src="https://cdn.dummyjson.com/product-images/1/1.jpg" alt="iphone9">
          </div>
          <div class="flex gap-0.5 py-1 px-1.5 text-xs leading-2 absolute bottom-0 -mb-7 bg-white rounded-full shadow">
          <span x-text="await $fetchjson('https://dummyjson.com/products/1', jsonItem='title')"></span>
          </div>
        </div>

        <div class="flex flex-col gap-2 items-start">
          <div class="text-3x3 leading-none rounded-full px-3 pb-1 pt-0.5 bg-white">
            <span>Description:</span>
            <span x-text="await $fetchjson('https://dummyjson.com/products/1', jsonItem='description')"></span>
          </div>
          <div class="text-3x3 leading-none rounded-full px-3 pb-1 pt-0.5 bg-white">
            <span>Price:</span>
            <span x-text="await $fetchjson('https://dummyjson.com/products/1', jsonItem='price')"></span>
            <span>/</span>
            <span x-text="await $fetchjson('https://dummyjson.com/products/1', jsonItem='rating')"></span>
          </div>
          <div class="text-3x3 leading-none rounded-full px-3 pb-1 pt-0.5 bg-white">
            <span class="font-bold">Stock:</span>
            <span x-text="await $fetchjson('https://dummyjson.com/products/1', jsonItem='stock')"></span>
          </div>
        </div>
      </div> 
  </div>
</body>
</html>